<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.LoginPage"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout Padding="30,24" Spacing="16">
            <Label Text="Bem-vindo" Style="{StaticResource Headline}" />
            <Label Text="Faça login para continuar" Style="{StaticResource SubHeadline}" />

            <Entry x:Name="EmailEntry"
                   Placeholder="Email"
                   Keyboard="Email"
                   Autocapitalize="None" />

            <Entry x:Name="PasswordEntry"
                   Placeholder="Senha"
                   IsPassword="True" />

            <HorizontalStackLayout Spacing="12">
                <Label Text="Usar URL do celular" VerticalOptions="Center" />
                <Switch x:Name="UseDeviceUrlSwitch" Toggled="OnUseDeviceUrlToggled" />
            </HorizontalStackLayout>
            <Label x:Name="ApiUrlLabel" Text="API: http://10.0.2.2:5137" FontSize="12" TextColor="#6B7280" />

            <Button x:Name="LoginBtn"
                    Text="Entrar"
                    Clicked="OnLoginClicked" />

            <Label x:Name="StatusLabel"
                   Text=""
                   TextColor="Red" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
