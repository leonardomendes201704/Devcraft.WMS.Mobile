<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.WelcomePage"
             Title="Menu"
             BackgroundColor="#F6F7FB">

    <ScrollView>
        <VerticalStackLayout Padding="20,16" Spacing="18">
            <Frame Padding="16" CornerRadius="20" BackgroundColor="#FFFFFF" HasShadow="True">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Olá" FontSize="22" FontAttributes="Bold" TextColor="#111827" />
                    <Label x:Name="WelcomeLabel"
                           Text="Bem-vindo!"
                           FontSize="16"
                           TextColor="#6B7280" />
                </VerticalStackLayout>
            </Frame>

            <Label Text="Essenciais" FontSize="16" FontAttributes="Bold" TextColor="#111827" />
            <Grid ColumnSpacing="12" RowSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Frame Grid.Row="0" Grid.Column="0" Padding="14" CornerRadius="18" BackgroundColor="#FFFFFF" HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="🧾" FontSize="22" />
                        <Label Text="Picking (Fila)" FontAttributes="Bold" />
                        <Label Text="Iniciar separação" FontSize="12" TextColor="#6B7280" />
                    </VerticalStackLayout>
                </Frame>
                <Frame Grid.Row="0" Grid.Column="1" Padding="14" CornerRadius="18" BackgroundColor="#FFFFFF" HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="✅" FontSize="22" />
                        <Label Text="Conferência" FontAttributes="Bold" />
                        <Label Text="Validar OS" FontSize="12" TextColor="#6B7280" />
                    </VerticalStackLayout>
                </Frame>

                <Frame Grid.Row="1" Grid.Column="0" Padding="14" CornerRadius="18" BackgroundColor="#FFFFFF" HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="📦" FontSize="22" />
                        <Label Text="Packing" FontAttributes="Bold" />
                        <Label Text="Embalar e etiquetar" FontSize="12" TextColor="#6B7280" />
                    </VerticalStackLayout>
                </Frame>
                <Frame Grid.Row="1" Grid.Column="1" Padding="14" CornerRadius="18" BackgroundColor="#FFFFFF" HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="🚚" FontSize="22" />
                        <Label Text="Expedição" FontAttributes="Bold" />
                        <Label Text="Carregar e finalizar" FontSize="12" TextColor="#6B7280" />
                    </VerticalStackLayout>
                </Frame>

                <Frame Grid.Row="2" Grid.Column="0" Padding="14" CornerRadius="18" BackgroundColor="#FFFFFF" HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="📥" FontSize="22" />
                        <Label Text="Recebimento" FontAttributes="Bold" />
                        <Label Text="Check-in / ASN" FontSize="12" TextColor="#6B7280" />
                    </VerticalStackLayout>
                </Frame>
                <Frame Grid.Row="2" Grid.Column="1" Padding="14" CornerRadius="18" BackgroundColor="#FFFFFF" HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="🗂️" FontSize="22" />
                        <Label Text="Putaway" FontAttributes="Bold" />
                        <Label Text="Endereçar estoque" FontSize="12" TextColor="#6B7280" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <Label Text="Suporte rápido" FontSize="16" FontAttributes="Bold" TextColor="#111827" />
            <Grid ColumnSpacing="12" RowSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Frame Grid.Row="0" Grid.Column="0" Padding="14" CornerRadius="18" BackgroundColor="#FFFFFF" HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="📊" FontSize="22" />
                        <Label Text="Inventário" FontAttributes="Bold" />
                        <Label Text="Consultar saldo/posição" FontSize="12" TextColor="#6B7280" />
                    </VerticalStackLayout>
                </Frame>
                <Frame Grid.Row="0" Grid.Column="1" Padding="14" CornerRadius="18" BackgroundColor="#FFFFFF" HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="🔁" FontSize="22" />
                        <Label Text="Movimentação" FontAttributes="Bold" />
                        <Label Text="Transferir/ajustar" FontSize="12" TextColor="#6B7280" />
                    </VerticalStackLayout>
                </Frame>

                <Frame Grid.Row="1" Grid.Column="0" Padding="14" CornerRadius="18" BackgroundColor="#FFFFFF" HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="♻️" FontSize="22" />
                        <Label Text="Reposição" FontAttributes="Bold" />
                        <Label Text="Reabastecer" FontSize="12" TextColor="#6B7280" />
                    </VerticalStackLayout>
                </Frame>
                <Frame Grid.Row="1" Grid.Column="1" Padding="14" CornerRadius="18" BackgroundColor="#FFFFFF" HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="📌" FontSize="22" />
                        <Label Text="Minhas Tarefas" FontAttributes="Bold" />
                        <Label Text="Pendências do operador" FontSize="12" TextColor="#6B7280" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <Label Text="Gestão/visibilidade" FontSize="16" FontAttributes="Bold" TextColor="#111827" />
            <Grid ColumnSpacing="12" RowSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Frame Grid.Row="0" Grid.Column="0" Padding="14" CornerRadius="18" BackgroundColor="#FFFFFF" HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="⚠️" FontSize="22" />
                        <Label Text="Alertas" FontAttributes="Bold" />
                        <Label Text="Divergências/erros" FontSize="12" TextColor="#6B7280" />
                    </VerticalStackLayout>
                </Frame>
                <Frame Grid.Row="0" Grid.Column="1" Padding="14" CornerRadius="18" BackgroundColor="#FFFFFF" HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="📈" FontSize="22" />
                        <Label Text="KPIs rápidos" FontAttributes="Bold" />
                        <Label Text="Hoje: separadas / conferidas / expedidas" FontSize="12" TextColor="#6B7280" />
                    </VerticalStackLayout>
                </Frame>

                <Frame Grid.Row="1" Grid.Column="0" Padding="14" CornerRadius="18" BackgroundColor="#FFFFFF" HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="🧩" FontSize="22" />
                        <Label Text="Cadastro rápido" FontAttributes="Bold" />
                        <Label Text="Produto/Lote" FontSize="12" TextColor="#6B7280" />
                    </VerticalStackLayout>
                </Frame>
                <Frame Grid.Row="1" Grid.Column="1" Padding="14" CornerRadius="18" BackgroundColor="#FFFFFF" HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="🧾" FontSize="22" />
                        <Label Text="Auditoria" FontAttributes="Bold" />
                        <Label Text="Histórico de movimentações" FontSize="12" TextColor="#6B7280" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
