<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DevcraftWMS.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DevcraftWMS.Mobile">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Contexto"
        ContentTemplate="{DataTemplate local:ContextSelectionPage}"
        Route="ContextSelectionPage" />

    <ShellContent
        Title="Menu"
        ContentTemplate="{DataTemplate local:WelcomePage}"
        Route="WelcomePage" />
</Shell>

