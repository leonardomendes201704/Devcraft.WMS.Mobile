<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DevcraftWMS.Mobile.PickingQueuePage"
             Title="Fila de Picking">

    <ScrollView>
        <VerticalStackLayout Padding="20,16" Spacing="12">
            <Label Text="Fila de Picking" FontSize="22" FontAttributes="Bold" />

            <Entry x:Name="SearchEntry" Placeholder="Buscar por pedido" TextChanged="OnSearchChanged" />

            <HorizontalStackLayout Spacing="12">
                <Picker x:Name="StatusPicker" Title="Status" SelectedIndexChanged="OnFilterChanged" />
                <Switch x:Name="ActiveSwitch" Toggled="OnFilterChanged" />
                <Label Text="Ativo" VerticalOptions="Center" />
            </HorizontalStackLayout>

            <Button Text="Atualizar" Clicked="OnRefreshClicked" />

            <Label x:Name="StatusLabel" TextColor="Red" />

            <CollectionView x:Name="TasksList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="12" CornerRadius="12" BorderColor="#E5E7EB" Margin="0,4">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{Binding OrderNumber}" FontAttributes="Bold" />
                                <Label Text="{Binding WarehouseName}" FontSize="12" TextColor="#6B7280" />
                                <Label Text="{Binding StatusText}" FontSize="12" />
                                <Label Text="Criado: {Binding CreatedAtUtc}" FontSize="12" />
                                <HorizontalStackLayout Spacing="8">
                                    <Button Text="Iniciar" Clicked="OnStartClicked" CommandParameter="{Binding}" />
                                    <Button Text="Executar" Clicked="OnExecuteClicked" CommandParameter="{Binding}" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

